//solved by Heba

#include <iostream>
#include <string>
#include <cmath>

using namespace std;
class complex {
private:
	int R, I;
public:
	complex(int i = 0, int r = 0) :I(i), R(r) {}

	complex(const complex& c) {
		R = c.R;
		I = c.I;
	}
	void display()
	{
		cout << R << "+" << I << "i";
	}
	double toReal()
	{
		return sqrt(R * R + I * I);
	}
	static double avrReal(complex c1, complex c2)
	{
		return (c1.toReal(), c2.toReal()) / 2;
	}
};
int main()
{
	complex c1(3, 4), c2(5, 12);
	cout << "Complex number c1: ";
	c1.display();
	cout << "\nComplex number c2: ";
	c2.display();
	cout << "\nAverage of real parts: " << complex::avrReal(c1, c2) << endl;
	return 0;
}
