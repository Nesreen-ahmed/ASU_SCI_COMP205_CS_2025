#include<iostream>
using namespace std;
class Student{
    private:
        string name;
        float age;
        int ID;
        double marks[5];
        double average;
    public:
        Student(){
            name=" unknown ";
            age=0;
            ID=0;
            for(int i=0;i<5;i++){
                marks[i]=0;
            }
            average=0;
        }
        Student(string a,float b,int c,double d[5]){
            name=a;
            age=b;
            ID=c;
			average = 0;
            for(int i =0;i<5;i++)
			{
				marks[i] = d[i];
				average+= d[i];
			}
			average /=5.0;
        }
        Student(const Student& X){
            name=X.name;
            age=X.age;
            ID=X.ID;
            for(int i=0;i<5;i++){
                marks[i]=X.marks[i];
            }
            average=X.average;
        }

        void read(){
            double sum=0;
            cout<<"NAME : ";
            cin>>name;
            cout<<"AGE : ";
            cin>>age;
            cout<<"ID : ";
            cin>>ID;
            cout<<"5 marks : "<<endl;
            for(int i=0;i<5;i++){
                cout<<"mark "<<i+1<<" = ";
                cin>>marks[i];
                sum+=marks[i];
            }
            average=sum/5;
            cout<<endl;
        }
        void display(){
           cout<<name<<" ; age:  "<<age<<" ; ID: "<<ID<<" ; 5 marks: ";
           for(int i=0;i<5;i++){
            cout<<marks[i]<<" ; ";
           }
           cout<<"average: "<<average<<";"<<endl;
        }
};
int main(){
    Student X[50];
    cout<<"Enter the number of the students : "<<endl;
    int n;cin>>n;
    cout<<"Enter data members"<<endl;
    for(int i=0;i<n;i++){
        cout<<"student "<<i+1<<endl;
        X[i].read();
    }
    cout<<"------------------------------------------"<<endl;
    for(int i=0;i<n;i++){
        cout<<"student "<<i+1<<" : "<<endl;
        X[i].display();
    }
	cout<<endl;
	double mk[5] = {0,0,0,0,0};
	Student T("Ahmed",3.5, 12, mk);
	T.display();
    cout<<endl;
    Student B(X[0]);
    cout<<"Student "<<n+1<<" : is a copy constructor from the first student : "<<endl;
    B.display();
    cout<<endl;
    Student S;
    cout<<"Student "<<n+2<<" : is initialized by a default constructor : "<<endl;
    S.display();
    cout<<endl<<"Total Number of students : "<<n+2<<endl;
    return 0;
}
